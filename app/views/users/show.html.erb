<div class="container mt-5">
  <div class="card shadow-lg border-0">
    <div class="card-header bg-primary text-white text-center py-3">
      <h3 class="mb-0">User Profile: <%= @user.name %></h3>
    </div>
    
    <div class="card-body">
      <ul class="list-group list-group-flush">
        
        <%# User ID %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <strong>User ID:</strong>
          <span><%= @user.id %></span>
        </li>
        
        <%# User Name %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <strong>Name:</strong>
          <span><%= @user.name %></span>
        </li>
        
        <%# User Email %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <strong>Email:</strong>
          <span><%= @user.email %></span>
        </li>

        <%# Admin Status (optional but helpful) %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <strong>Admin Status:</strong>
          <span class="<%= @user.is_admin ? 'badge bg-success' : 'badge bg-secondary' %>">
            <%= @user.is_admin ? 'Administrator' : 'Standard User' %>
          </span>
        </li>
      </ul>
    </div>
    
    <div class="card-footer d-flex justify-content-between">
      <%= link_to 'Back to Users List', users_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
</div>
