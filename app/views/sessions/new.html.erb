<div class="container my-5">
  <h1 class="mb-4 text-center">User Login</h1>

  <%# The form_with targets the 'login' path (POST /login) which is handled by SessionsController#create %>
  <%= form_with(url: login_path, local: true, data: { turbo: false }) do |form| %>
    
    <div class="mb-3">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :password, class: "form-label" %>
      <%= form.password_field :password, class: "form-control", required: true %>
    </div>

    <div class="d-grid gap-2 mt-4">
      <%= form.submit "Log In", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="text-center mt-3">
    <%# Optional link for users who need to create an account %>
    <%= link_to 'Need an account? Sign Up', new_user_path, class: "text-secondary" %>
  </div>
</div>
